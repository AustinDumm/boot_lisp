(define-macro require
    (lambda (file-path)
        `(begin ,@(read file-path))))

(define-macro define
    (lambda (binding . value)
        (if (list? binding)
            `(create! ,(first binding) (lambda ,(rest binding) (begin ,@value)))
            `(create! ,binding ,value))))

